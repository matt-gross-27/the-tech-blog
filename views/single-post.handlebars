
  <div class="accordion-item">
    <h2 class="accordion-header p-3" id="heading{{post.id}}">
      <button class="accordion-button w-100 mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{post.id}}" aria-expanded="false" aria-controls="collapse{{post.id}}">
        <em>{{post.title}}</em> by {{post.user.username}} on {{format_date post.created_at}}
      </button>
    </h2>
    <div id="collapse{{post.id}}" class="accordion-collapse collapse show" aria-labelledby="heading{{post.id}}" data-bs-parent="#accordionExample">
      <div class="accordion-body px-3 px-md-5 text-justify">
        <div>
          <p>
          {{post.blog_text}}
          </p>
        </div>
        
        <div class="d-flex justify-content-around my-3">
          
          {{!-- LIKE --}}
          <div class="oi-likeDiv d-flex align-items-center justify-content-center post-buttons rounded-circle 
            {{#if i_like}} red {{/if}}" 
            data-post_id ="{{id}}"
            {{#if i_like}} data-i_like="1" {{/if}}
            {{#unless i_like}} data-i_like="0" {{/unless}}
          >
            <span class="oi" data-glyph="heart"> {{post.likes.length}}</span>
          </div>


          {{!-- FLAG --}}
          <div class="oi-flagDiv d-flex align-items-center justify-content-center post-buttons rounded-circle" data-post_id ="{{id}}">
            <span class="oi" data-glyph="flag"></span>
            <span>{{flag_count}}</span>
          </div>
          
          {{!-- SHARE --}}
          <div class="oi-shareDiv d-flex align-items-center justify-content-center post-buttons rounded-circle" data-post_id ="{{id}}">
            <span class="oi" data-glyph="share-boxed"></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h2 class="h2">Comment</h2>
  <form id="create-comment" class="comment-form w-100" action="">
    <textarea id="comment-text" class="comment-textarea w-100"></textarea> 
    <button class="btn-main">Add Comment</button>
  </form>

  {{#each post.comments}}
    {{> comments }}
  {{/each}}

<script src= "../../javascript/addComment.js"></script>`

   